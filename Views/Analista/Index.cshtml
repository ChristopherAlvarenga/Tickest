@using Tickest.Models
@using Tickest.Enums


@{
    Layout = "_Layout";
    ViewData["Title"] = "Tickest - Home";
}

<link rel="stylesheet" href="~/css/chat.css" />

<style>
    .modal-body {
        background-color: #fff;
        border-color: #fff;
    }

    .d-flex1 {
        display: flex !important;
        flex-wrap: wrap !important;
        word-break: break-all;
        word-wrap: break-word;
        white-space: normal;
    }

    .close {
        color: #000;
        cursor: pointer;
    }

        .close:hover {
            color: #000;
        }

    .theme-color {
        flex-wrap: wrap !important;
        color: #004cb9;
        word-break: break-all;
        word-wrap: break-word;
        white-space: normal;
    }

    hr.new1 {
        border-top: 2px dashed #fff;
        margin: 0.4rem 0;
    }
</style>

<div class="row">
    <div class="col-lg-12 mb-4 order-0">
        <div class="card" style="width:100%">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body p-4">
                        <h5 class="card-title text-primary">Seja bem-vindo(a) @Model.Usuario.Nome!</h5>
                        <p class="mb-3 mt-5">Tickets em aberto: <span class="fw-bold">@ViewBag.TicketsAberto</span></p>
                        <p class="mb-3">Tickets recebidos esse mês: <span class="fw-bold">@ViewBag.TicketsRecebidos</span></p>
                        <p class="mb-1">Tickets concluídos esse mês: <span class="fw-bold">@ViewBag.TicketConcluidos</span></p>
                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-12 order-2 order-md-3 order-lg-2 mb-4">
        <div class="card">
            <div class="row row-bordered g-0">
                <h5 class="card-title text-primary m-4">Tickets em Aberto</h5>
                <div class="card">
                    <div class="table-responsive text-nowrap p-4">
                        <table class="table table-hover" id="Tickets">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Título</th>
                                    <th scope="col">Departamento</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Ação</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach (var ticket in Model.Tickets)
                                {
                                    <tr>
                                        <td><strong>#@ticket.Id</strong></td>
                                        <td><strong>@ticket.Titulo</strong></td>
                                        <td>@ticket.Departamento.Nome</td>
                                        <td><span class="badge bg-label-dark me-1">@ticket.Status</span></td>
                                        <td>
                                            <!-- Botão -->
                                            <button type="button" class="btn btn-primary modal-ticket" data-ticket-id="@ticket.Id" data-bs-toggle="modal" data-bs-target="#modalScrollable-@ticket.Id">
                                                Ver mais
                                            </button>
                                            <!-- Modal -->
                                            <div class="modal fade" id="modalScrollable-@ticket.Id" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">#@ticket.Id - @ticket.Titulo</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="px-4 py-5">
                                                                <div class="theme-color">@ticket.Descricao</div>
                                                                <hr class="new1">
                                                                <div class="d-flex justify-content-between">
                                                                    <span class="font-weight-bold">Criado Em:</span>
                                                                    <span class="text-muted">@ticket.DataCriacao</span>
                                                                </div>
                                                                <div class="d-flex justify-content-between">
                                                                    <span class="font-weight-bold">Prioridade:</span>
                                                                    <span class="text-muted">@ticket.Prioridade</span>
                                                                </div>
                                                                <div class="d-flex justify-content-between">
                                                                    <span class="font-weight-bold">Status:</span>
                                                                    <span class="text-muted">@ticket.Status</span>
                                                                </div>
                                                                <div class="d-flex justify-content-between">
                                                                    <span class="font-weight-bold">Enviado por:</span>
                                                                    <span class="text-muted">@ticket.Solicitante.Nome (@ticket.Solicitante.Email)</span>
                                                                </div>
                                                                <div class="d-flex justify-content-between">
                                                                    <span class="font-weight-bold">Departamento:</span>
                                                                    <span class="text-muted">@ticket.Departamento.Nome</span>
                                                                </div>
                                                                <div class="mt-3">
                                                                    <span class="font-weight-bold">Anexos:</span><br />
                                                                    @if (ticket.Anexos != null)
                                                                    {
                                                                        @foreach (var anexo in ticket.Anexos)
                                                                        {
                                                                            var name = anexo.Endereco.Substring(anexo.Endereco.LastIndexOf('/') + 1);
                                                                            <a href="~/@anexo.Endereco" download="@name">@name</a>

                                                                            <br />
                                                                        }
                                                                    }
                                                                </div>
                                                            </div>
                                                            <div class="card card-chat @(ticket.Status == TicketStatusEnum.Aberto ? "d-none" : "")">
                                                                <div class="card-header msg_head">
                                                                    <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
                                                                    <div class="action_menu">
                                                                        <ul>
                                                                            <li><i class="fas fa-user-circle"></i> Ver perfil</li>
                                                                            <li><i class="fas fa-users"></i> Adicionar aos amigos</li>
                                                                            <li><i class="fas fa-plus"></i> Adicionar ao grupo</li>
                                                                            <li><i class="fas fa-ban"></i> Bloquear</li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <div class="card-body msg_card_body" id="chat-@ticket.Id"></div>
                                                                @if (ticket.Status != TicketStatusEnum.Concluido && ticket.Status != TicketStatusEnum.Cancelado)
                                                                {
                                                                    <div class="card-footer">
                                                                        <div class="input-group">
                                                                            <div class="input-group-prepend">
                                                                                <span class="input-group-text attach_btn" data-ticket-id="@ticket.Id"><i class="fas fa-paperclip"></i></span>
                                                                                <input type="file" class="input-attach" id="attach-@ticket.Id" style="display:none;">
                                                                            </div>
                                                                            <textarea id="text-@ticket.Id" class="form-control type_msg" placeholder="Escreva sua mensagem..."></textarea>
                                                                            <div class="input-group-append">
                                                                                <span class="input-group-text send_btn" data-ticket-id="@ticket.Id"><i class="fas fa-location-arrow"></i></span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            @if (ticket.Status == TicketStatusEnum.Aberto)
                                                            {
                                                                <form method="post" action="/Tickets/MudarStatus/@ticket.Id?status=@TicketStatusEnum.EmAndamento">
                                                                    <div class="text-center mt-5">
                                                                        <button class="btn btn-primary">Assumir Ticket</button>
                                                                    </div>
                                                                </form>
                                                            }
                                                            else if (ticket.Status == TicketStatusEnum.EmAndamento)
                                                            {
                                                                <form method="post" action="/Tickets/MudarStatus/@ticket.Id?status=@TicketStatusEnum.EmTeste">
                                                                    <div class="text-center mt-5">
                                                                        <button class="btn btn-primary">Colocar em teste</button>
                                                                    </div>
                                                                </form>
                                                            }
                                                            else if (ticket.Status == TicketStatusEnum.EmTeste)
                                                            {
                                                                <form method="post" action="/Tickets/MudarStatus/@ticket.Id?status=@TicketStatusEnum.Concluido">
                                                                    <div class="text-center mt-5">
                                                                        <button class="btn btn-primary">Concluir Ticket</button>
                                                                    </div>
                                                                </form>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.1/js/buttons.colVis.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Tickets').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/Portuguese-Brasil.json'
                },
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, 'Todos']],
                buttons: [
                    'copy', 'excel', 'pdf', 'print', 'colvis'
                ]
            });
        });

        // Anexar arquivo
        $('.attach_btn').click(function () {
            var ticketId = $(this).data('ticket-id');
            $('#attach-' + ticketId).click();
        });

        // Enviar mensagem
        $('.send_btn').click(function () {
            var ticketId = $(this).data('ticket-id');
            var message = $('#text-' + ticketId).val();
            $('#text-' + ticketId).val('');
            $.post('/Tickets/EnviarMensagem/' + ticketId, { message: message }, function (data) {
                $('#chat-' + ticketId).append('<div class="d-flex justify-content-end mb-4"><div class="msg_cotainer_send">' + message + '</div></div>');
            });
        });
    </script>
}
