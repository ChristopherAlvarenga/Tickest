@using Microsoft.AspNetCore.Identity
@using Tickest.Models.ViewModels;
@using Tickest.Models.Entities;

@model TicketViewModel
@inject UserManager<Usuario> userManager

@{
    ViewData["Title"] = "Tickest - Histórico";

    var user = await userManager.FindByEmailAsync(User.Identity.Name);

    string layout = "_Layout";
    if (await userManager.IsInRoleAsync(user, "Gerenciador"))
    {
        layout = "_LayoutGerenciador";
    }
    else if (await userManager.IsInRoleAsync(user, "Cliente"))
    {
        layout = "_LayoutCliente";
    }

    Layout = layout;
}

<link rel="stylesheet" href="~/css/chat.css" />

<div class="row">
    <div class="col-12 col-lg-12 order-2 order-md-3 order-lg-2 mb-4">
        <div class="card">
            <div class="row row-bordered g-0">
                <h5 class="card-title text-primary m-4">Histórico de Tickets</h5>
                <div class="card">
                    <div class="table-responsive text-nowrap p-4">
                        <table class="table table-hover" id="Tickets">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Título</th>
                                    <th scope="col">Departamento</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Ação</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach (var ticket in Model.Tickets)
                                {
                                    <tr>
                                        <td><strong>#@ticket.Id</strong></td>
                                        <td><strong>@ticket.Titulo</strong></td>
                                        <td>@(ticket.Departamento != null ? ticket.Departamento.Nome : "Departamento não especificado")</td>
                                        <td><span class="badge bg-label-dark me-1">@ticket.Status</span></td>
                                        <td>
                                            <button type="button" class="btn btn modal-ticket" ticket_id="@ticket.Id" data-bs-toggle="modal" data-bs-target="#modalScrollable-@ticket.Id">
                                                Ver mais
                                            </button>
                                            <div class="modal fade" ticket_id="@ticket.Id" id="modalScrollable-@ticket.Id" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-body">
                                                            <div class="text-right">
                                                                <i class="fa fa-close close" data-bs-dismiss="modal" aria-label="Close"></i>
                                                            </div>

                                                            <div class="px-4 py-5">
                                                                <h5 class="text-uppercase">#@ticket.Id</h5>
                                                                <h4 class="mt-5 theme-color mb-5">@ticket.Titulo</h4>

                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="theme-color">@ticket.Descricao</span>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <hr class="new1">
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Criado Em:</span>
                                                                    <span class="text-muted">@ticket.DataCriacao</span>
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Prioridade</span>
                                                                    <span class="text-muted">@ticket.Prioridade</span>
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Status</span>
                                                                    <span class="text-muted">@ticket.Status</span>
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Enviado por:</span>
                                                                    <span class="text-muted">@ticket.Solicitante?.Nome (@ticket.Solicitante?.Email)</span>
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Departamento:</span>
                                                                    <span class="text-muted">@ticket.Departamento?.Nome</span>
                                                                </div>
                                                                <div class="mt-3">
                                                                    <span class="font-weight-bold">Anexos:</span><br>
                                                                    @if (ticket.Anexos != null)
                                                                    {
                                                                        @foreach (var anexo in ticket.Anexos)
                                                                        {
                                                                            var name = anexo.Endereco.Substring(anexo.Endereco.IndexOf('/') + 1);
                                                                            <a href="~/@anexo.Endereco" download>@name</a>
                                                                            <br />
                                                                        }
                                                                    }
                                                                </div>
                                                            </div>

                                                            <div class="card card-chat">
                                                                <div class="card-header msg_head">
                                                                    <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
                                                                    <div class="action_menu">
                                                                        <ul>
                                                                            <li><i class="fas fa-user-circle"></i> View profile</li>
                                                                            <li><i class="fas fa-users"></i> Add to close friends</li>
                                                                            <li><i class="fas fa-plus"></i> Add to group</li>
                                                                            <li><i class="fas fa-ban"></i> Block</li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <div class="card-body msg_card_body" id="chat-@ticket.Id">
                                                                    <!-- Dynamic chat messages will load here -->
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        $(".modal-ticket").click(function () {
            var ticket_id = $(this).attr("ticket_id");
            var url = "/Chat/Mensagens/" + ticket_id;
            $.get(url, function (data) {
                $("#chat-" + ticket_id).html(data);
                $("#chat-" + ticket_id).scrollTop($("#chat-" + ticket_id)[0].scrollHeight);
            });
        });

        $(".modal").on('keypress', function (e) {
            var ticket_id = $(this).attr("ticket_id");
            if (e.which == 13) {
                $("#enviar-" + ticket_id).click();
            }
        });

        $(".attach_btn").click(function () {
            var ticket_id = $(this).attr("ticket_id");
            $("#attach-" + ticket_id).click();
        });

        $(".input-attach").change(function () {
            var id = $(this).attr("ticket_id");
            var filename = $(this).val();

            if (filename == "" || filename == null) {
                alert('Erro ao anexar arquivo');
            } else {
                var file = document.getElementById('attach-' + id).files[0];
                var filename = document.getElementById('attach-' + id).files[0].name;

                var formData = new FormData();
                formData.append("file", file);

                $.ajax({
                    dataType: "json",
                    type: "POST",
                    url: "/Chat/Upload",
                    cache: false,
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function (retorno) {
                        console.log(retorno);
                        if (retorno != null) {
                            $("#" + id).val('');
                            $("#" + id).append('<input type="file" id="attach-' + id + '" class="form-control attach" ticket_id="' + id + '"/>');
                            var html = '<div class="col-3" id="attach' + retorno.Id + '" >' + filename + '<br />' + retorno.Id + '</div>';
                            $('#' + id).append(html);
                        }
                    },
                    error: function (retorno) {
                        console.log(retorno);
                        alert('Erro ao anexar arquivo');
                    }
                });
            }
        });

        $(".send_btn").click(function () {
            var ticket_id = $(this).attr("ticket_id");
            var message = $("#text-" + ticket_id).val();
            var url = "/Chat/EnviarMensagem";
            var data = { TicketId: ticket_id, Mensagem: message };
            $.post(url, data, function (retorno) {
                $("#text-" + ticket_id).val('');
                var html = '<div class="d-flex justify-content-end mb-4"><div class="msg_cotainer_send">' + message + '</div><div class="img_cont_msg"><img src="https://pt.123rf.com/450/thumb-18661224.jpg" class="rounded-circle user_img_msg"></div></div>';
                $('#chat-' + ticket_id).append(html);
                $('#chat-' + ticket_id).scrollTop($('#chat-' + ticket_id)[0].scrollHeight);
            });
        });
    }
</script>
