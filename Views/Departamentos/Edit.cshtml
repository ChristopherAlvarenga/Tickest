@using Tickest.Models.ViewModels

@model DepartamentoEditViewModel

@{
    Layout = "_LayoutGerenciador";
    ViewData["Title"] = "Tickest - Editar Departamento";
}

<div class="row">
    @using (Html.BeginForm("Edit", "Departamentos", FormMethod.Post))
    {
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Editar Departamento</h5>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control mb-3" placeholder="Nome do Departamento" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="GerenciadorSelecionado" class="form-label">Responsável pelo Departamento</label>
                        @Html.DropDownListFor(model => model.GerenciadorSelecionado, new SelectList(Model.GerenciadoresDisponiveis, "Id", "Nome"), "-- Selecione --", new { @class = "form-control mt-2 mb-3" })
                        <span asp-validation-for="GerenciadorSelecionado" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Salvar</button>
                </div>
            </div>
        </div>
    }
</div>
