@model Tickest.Models.ViewModels.UsuarioEditViewModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<h1>Editar Usuário</h1>

@if (ViewBag.Error != null)
{
    <span style="color: red">@ViewBag.Error</span>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Usuarios">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Funcao" class="control-label">Função</label>
                <input asp-for="Funcao" class="form-control" />
                <span asp-validation-for="Funcao" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="DepartamentoId" class="control-label">Departamento</label>
                <select asp-for="DepartamentoId" class="form-select form-control" id="Departamentos">
                    @foreach (var departamento in ViewBag.Departamentos)
                    {
                        <option value="@departamento.Id">@departamento.Nome</option>
                    }
                </select>
            </div>

            <div class="form-group mt-3">
                <label asp-for="EspecialidadeId" class="control-label" id="EspecialidadeLabel" style="display:none">Especialidade</label>
                <select asp-for="EspecialidadeId" class="form-select form-control" id="EspecialidadesDrop" style="display:none">
                </select>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-area="" asp-controller="Usuarios" asp-action="List">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("Departamentos").addEventListener("change", function () {
            var depId = this.value;
            var especialidadesDrop = document.getElementById("EspecialidadesDrop");
            var especialidadeLabel = document.getElementById("EspecialidadeLabel");

            especialidadesDrop.style.display = depId ? "block" : "none";
            especialidadeLabel.style.display = depId ? "block" : "none";

            especialidadesDrop.innerHTML = '';

            var especialidades = @Html.Raw(Json.Serialize(Model.Especialidades));

            especialidades.forEach(function (especialidade) {
                if (depId == especialidade.DepartamentoId) {
                    especialidadesDrop.innerHTML += '<option value="' + especialidade.Id + '">' + especialidade.Nome + '</option>';
                }
            });
        });
    </script>
}
