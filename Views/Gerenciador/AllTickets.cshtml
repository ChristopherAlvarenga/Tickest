@using Microsoft.AspNetCore.Identity
@using Tickest.Enums
@using Tickest.Helpers
@using Tickest.Models.Entities
@using Tickest.Models.ViewModels

@model TicketViewModel

<style>
    .modal-body {
        background-color: #fff;
        border-color: #fff;
    }

    .d-flex1 {
        display: flex !important;
        flex-wrap: wrap !important;
        word-break: break-all;
        word-wrap: break-word;
        white-space: normal;
    }

    .close {
        color: #000;
        cursor: pointer;
    }

    .close:hover {
        color: #000;
    }

    .theme-color {
        flex-wrap: wrap !important;
        color: #004cb9;
        word-break: break-all;
        word-wrap: break-word;
        white-space: normal;
    }

    hr.new1 {
        border-top: 2px dashed #fff;
        margin: 0.4rem 0;
    }
</style>

<link rel="stylesheet" href="~/css/chat.css" />

<div class="row">
    <div class="col-12 col-lg-12 order-2 order-md-3 order-lg-2 mb-4">
        <div class="card">
            <div class="row row-bordered g-0">
                <!-- Título da página -->
                <h5 class="card-title text-primary m-4">Todos os Tickets</h5>

                <div class="card">
                    <div class="table-responsive text-nowrap p-4">
                        <!-- Tabela de Tickets -->
                        <table class="table table-hover" id="Tickets">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Título</th>
                                    <th scope="col">Departamento</th>
                                    <th scope="col">Solicitante</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Ação</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                <!-- Loop pelos tickets -->
                                @foreach (var ticket in Model.Tickets)
                                {
                                    <tr>
                                        <td><strong>#@ticket.Id</strong></td>
                                        <td><strong>@ticket.Titulo</strong></td>
                                        <td>@ticket.Departamento.Nome</td>
                                        <td>@(ticket.Solicitante != null ? ticket.Solicitante.Nome : "Solicitante não disponível")</td>
                                        <td><span class="badge bg-label-dark me-1">@ticket.Status</span></td>
                                        <td class="align-middle">
                                            <!-- Botão para ver mais informações -->
                                            <button type="button" class="btn btn modal-ticket" ticket_id="@ticket.Id" data-bs-toggle="modal" data-bs-target="#modalScrollable-@ticket.Id">
                                                Ver mais
                                            </button>

                                            <!-- Modal de Detalhes do Ticket -->
                                            <div class="modal fade" ticket_id="@ticket.Id" id="modalScrollable-@ticket.Id" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-body">
                                                            <!-- Fechar modal -->
                                                            <div class="text-right">
                                                                <i class="fa fa-close close" data-bs-dismiss="modal" aria-label="Close"></i>
                                                            </div>

                                                            <!-- Conteúdo do modal -->
                                                            <div class="px-4 py-5">
                                                                <!-- Informações do ticket -->
                                                                <h5 class="text-uppercase">#@ticket.Id</h5>
                                                                <h4 class="mt-5 theme-color mb-5">@ticket.Titulo</h4>

                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="theme-color">@ticket.Descricao</span>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <hr class="new1">
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Criado Em:</span>
                                                                    <span class="text-muted">@ticket.DataCriacao</span>
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Prioridade:</span>
                                                                    <span class="text-muted">@ticket.Prioridade</span>
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Status:</span>
                                                                    <span class="text-muted">@ticket.Status</span>
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Enviado por:</span>
                                                                    <span class="text-muted">@ticket.Solicitante.Nome (@ticket.Solicitante.Email)</span>
                                                                </div>
                                                                <div class="d-flex1 justify-content-between">
                                                                    <span class="font-weight-bold">Departamento:</span>
                                                                    <span class="text-muted">@ticket.Departamento.Nome</span>
                                                                </div>
                                                                <div class="mt-3">
                                                                    <span class="font-weight-bold">Anexos:</span>
                                                                    <br>
                                                                    <!-- Anexos do ticket -->
                                                                    @if (ticket.Anexos != null)
                                                                    {
                                                                        @foreach (var anexo in ticket.Anexos)
                                                                        {
                                                                            var name = anexo.Endereco.Substring(anexo.Endereco.LastIndexOf('/') + 1);

                                                                            <a href="~/@anexo.Endereco" download>@name</a>
                                                                            <br />
                                                                        }
                                                                    }
                                                                </div>
                                                            </div>

                                                            <!-- Chat do Ticket -->
                                                            <div class="card card-chat">
                                                                <div class="card-header msg_head">
                                                                    <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
                                                                    <div class="action_menu">
                                                                        <ul>
                                                                            <li><i class="fas fa-user-circle"></i> View profile</li>
                                                                            <li><i class="fas fa-users"></i> Add to close friends</li>
                                                                            <li><i class="fas fa-plus"></i> Add to group</li>
                                                                            <li><i class="fas fa-ban"></i> Block</li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <div class="card-body msg_card_body" id="chat-@ticket.Id">
                                                                    <!-- Conteúdo do chat carregado dinamicamente -->
                                                                </div>
                                                                <div class="card-footer">
                                                                    <div class="input-group">
                                                                        <div class="input-group-append">
                                                                            <span ticket_id="@ticket.Id" class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
                                                                            <input type="file" class="input-attach" ticket_id="@ticket.Id" id="attach-@ticket.Id" style="display:none;">
                                                                        </div>
                                                                        <textarea name="" id="text-@ticket.Id" class="form-control type_msg" placeholder="Escreva sua mensagem..."></textarea>
                                                                        <div class="input-group-append">
                                                                            <span class="input-group-text send_btn" id="enviar-@ticket.Id" ticket_id="@ticket.Id"><i class="fas fa-location-arrow"></i></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!-- Fim do modal de Detalhes do Ticket -->
                                                        <!-- Rodapé do modal de "Ver mais" -->
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalEditar-@ticket.Id" data-bs-dismiss="modal">Editar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Fim Modal "Ver mais" -->
                                            <!-- Modal de Edição do Ticket -->
                                            <div class="modal fade" id="modalEditar-@ticket.Id" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" style="max-width: 40%;">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Editar Ticket #@(ticket.Id)</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <!-- Formulário de edição do Ticket -->
                                                            <form id="form-editar-@ticket.Id" asp-action="Editar" asp-controller="Tickets" asp-area="Gerenciador" method="post">
                                                                <input type="hidden" name="Id" value="@ticket.Id" />

                                                                <div class="mb-3">
                                                                    <label for="Titulo" class="form-label">Título</label>
                                                                    <input type="text" class="form-control" id="titulo" name="Titulo" value="@ticket.Titulo">
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label for="Descricao" class="form-label">Descrição</label>
                                                                    <textarea class="form-control" id="descricao" name="Descricao">@ticket.Descricao</textarea>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label for="Departamento" class="form-label">Departamento</label>
                                                                    <input type="text" class="form-control" id="departamento" name="Departamento" value="@ticket.Departamento.Nome" readonly>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label for="Solicitante" class="form-label">Solicitante</label>
                                                                    <input type="text" class="form-control" id="solicitante" name="Solicitante" value="@ticket.Solicitante.Nome" readonly>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label for="Prioridade" class="form-label">Prioridade</label>
                                                                    <select class="form-select" id="prioridade" name="Prioridade">
                                                                        @foreach (var prioridade in Enum.GetValues(typeof(TicketPrioridadeEnum)))
                                                                        {
                                                                            <option value="@prioridade" selected="@(ticket.Prioridade == (TicketPrioridadeEnum)prioridade)">@((TicketPrioridadeEnum)prioridade)</option>
                                                                        }
                                                                    </select>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label for="Status" class="form-label">Status</label>
                                                                    <select class="form-select" id="status" name="Status">
                                                                        @foreach (var status in Enum.GetValues(typeof(TicketStatusEnum)))
                                                                        {
                                                                            <option value="@status" selected="@(ticket.Status == (TicketStatusEnum)status)">@((TicketStatusEnum)status)</option>
                                                                        }
                                                                    </select>
                                                                </div>

                                                                <button type="submit" class="btn btn-primary">Salvar alterações</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Fim Modal de Edição do Ticket -->

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@* Scripts para o funcionamento do modal e do chat *@
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.3.2/socket.io.js"></script>
    <script src="~/js/chat.js"></script>
}


<script>
    window.onload = function () {


        $(".modal-ticket").click(function () {
            var ticket_id = $(this).attr("ticket_id");
            var url = "/Chat/Mensagens/" + ticket_id;
            $.get(url, function (data) {
                $("#chat-" + ticket_id).html(data);
                $("#chat-" + ticket_id).scrollTop($("#chat-" + ticket_id)[0].scrollHeight);
            });
        })
        $(".modal").on('keypress', function (e) {
            var ticket_id = $(this).attr("ticket_id");
            if (e.which == 13) {
                $("#enviar-" + ticket_id).click();
            }
        });

        $(".attach_btn").click(function () {
            var ticket_id = $(this).attr("ticket_id");

            $("#attach-" + ticket_id).click();
        })

        $(".input-attach").change(function () {

            var id = $(this).attr("ticket_id");
            var filename = $(this).val();

            if (filename == "" || filename == null) {
                alert('Error');
            } else {
                var file = document.getElementById('attach-' + id).files[0];
                var filename = document.getElementById('attach-' + id).files[0].name;

                var formData = new FormData();


                formData.append("file", file);
                $.ajax({
                    dataType: "json",
                    type: "POST",
                    url: "/Chat/Upload",
                    cache: false,
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function (retorno) {
                        console.log(retorno);
                        if (retorno['sucesso']) {
                            var url = retorno['sucesso'];
                            var html = '<a class="help-button col-sm-4 downloadupaddinvoice" download="' + filename + '" href="../' + url + '"  title="Baixar anexo" download><i class="icon-download-alt"></i>' + filename + '</a>';
                            var formData = new FormData();
                            formData.append("ticket_id", id);
                            formData.append("msg", html);
                            $.ajax({
                                dataType: "json",
                                type: "POST",
                                url: "/Chat/Enviar",
                                cache: false,
                                contentType: false,
                                processData: false,
                                data: formData,
                                success: function (retorno) {
                                    console.log(retorno);
                                    if (retorno['sucesso']) {
                                        $("#text-" + id).val("");
                                        var url = "/Chat/Mensagens/" + id;
                                        $.get(url, function (data) {
                                            $("#chat-" + id).html(data);
                                            $("#chat-" + id).scrollTop($("#chat-" + id)[0].scrollHeight);
                                        });

                                    }

                                }
                            });


                        }

                    }
                });

            }

        })

        $(".send_btn").click(function () {

            var formData = new FormData();
            var ticket_id = $(this).attr("ticket_id");
            var msg = $("#text-" + ticket_id).val();
            formData.append("ticket_id", ticket_id);
            formData.append("msg", msg);
            $.ajax({
                dataType: "json",
                type: "POST",
                url: "/Chat/Enviar",
                cache: false,
                contentType: false,
                processData: false,
                data: formData,
                success: function (retorno) {
                    console.log(retorno);
                    if (retorno['sucesso']) {
                        $("#text-" + ticket_id).val("");
                        var url = "/Chat/Mensagens/" + ticket_id;
                        $.get(url, function (data) {
                            $("#chat-" + ticket_id).html(data);
                            $("#chat-" + ticket_id).scrollTop($("#chat-" + ticket_id)[0].scrollHeight);
                        });

                    }

                }
            });
        })
        $('#Tickets').DataTable({
            "ordering": true,
            "paging": true,
            "searching": true,
            "oLanguage": {
                "sEmptyTable": "Nenhum registro encontrado na tabela",
                "sInfo": "Mostrar _START_ até _END_ de _TOTAL_ registros",
                "sInfoEmpty": "Mostrar 0 até 0 de 0 Registros",
                "sInfoFiltered": "(Filtrar de _MAX_ total registros)",
                "sInfoPostFix": "",
                "sInfoThousands": ".",
                "sLengthMenu": "Mostrar _MENU_ registros por pagina",
                "sLoadingRecords": "Carregando...",
                "sProcessing": "Processando...",
                "sZeroRecords": "Nenhum registro encontrado",
                "sSearch": "Pesquisar",
                "oPaginate": {
                    "sNext": "Proximo",
                    "sPrevious": "Anterior",
                    "sFirst": "Primeiro",
                    "sLast": "Ultimo"
                },
                "oAria": {
                    "sSortAscending": ": Ordenar colunas de forma ascendente",
                    "sSortDescending": ": Ordenar colunas de forma descendente"
                }
            }
        });


    @foreach (var ticket in Model.Tickets)
    {
        <text>
                setInterval(function () {




                    var url = "/Chat/Mensagens/@ticket.Id";
                    $.get(url, function (data) {
                        var scroll = $("#chat-@ticket.Id").scrollTop();


                        if ($("#chat-@ticket.Id")[0].scrollHeight - $("#chat-@ticket.Id").scrollTop() == $("#chat-@ticket.Id").outerHeight()) {
                            $("#chat-@ticket.Id").html(data);
                            $("#chat-@ticket.Id").scrollTop($("#chat-@ticket.Id")[0].scrollHeight);
                            console.log("entrou");
                        } else {
                            $("#chat-@ticket.Id").html(data);
                            $("#chat-@ticket.Id").scrollTop(scroll);
                        }
                    });
                    console.log("foi");



                }, 3000);
        </text>



    }
                                                    }
</script>